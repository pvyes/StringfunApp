<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StringFunApp"
             xmlns:video="clr-namespace:FormsVideoLibrary"
             x:Class="StringFunApp.VideoPlayerView">

    <Grid>
        
        
        <video:VideoPlayer x:Name="videoPlayer" Grid.Row="0" 
                           Source="https://videos.weebly.com/uploads/1/9/4/9/19490871/1_de_strijkstokhouding_potlood_cello_744.mp4"></video:VideoPlayer>

        <Picker x:Name="pickFasePlusStap" Title="Kies een Fase en Stap" Grid.Row="1">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Fase 1 Stap 1</x:String>
                    <x:String>Fase 1 Stap 2</x:String>
                    <x:String>Fase 1 Stap 3</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <ListView x:Name="FasesEnStappen" Grid.Row="2"></ListView>
    </Grid>
</ContentPage>
