<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bhv="clr-namespace:StringFunApp.Behaviors"
             x:Class="StringFunApp.Views.StapView">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout>
                <Image Source="https://www.staproeselare.be/stringfun/images/logo.png"></Image>
                <Label HorizontalOptions="Center" Text="{Binding TypeInstrument}"></Label>
                <Label HorizontalOptions="Center" Text="{Binding BoekNummer}"></Label>
            </FlexLayout>
            <FlexLayout x:Name="Buttons" Wrap="Wrap"></FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>